<div class="col-md-4 mx-auto">
    <div class="card bg-transparent border-primary">
    <div class="card-header bg-transparent border-primary text-primary ">
        <h3>Nueva Tarea</h3>
    </div>
    <div class="card-body">

        <form action="/notes/new-note" method="POST">
            <div class="form-group">
                <input type="text" name="title" class="form-control" placeholder="Título" autofocus>
            </div>
            <div>
                <textarea name="description" class="form-control" placeholder="Descripción"></textarea>
            </div>
            <br>
            <div class="form-group">
                <button class="btn btn-primary btn-block" type="submit">
                    GUARDAR
                </button>
            </div>
        </form>
    </div>
</div>
</div>
